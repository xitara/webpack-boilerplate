{
    "name": "webpack-boilerplate",
    "version": "0.9.1.4",
    "description": "Webpack based boilerplate including ES6, Babel, Sass and much more",
    "author": "Manuel Burghammer",
    "license": "MIT",
    "type": "module",
    "repository": {
        "type": "git",
        "url": "https://github.com/xitara/webpack-boilerplate.git"
    },
    "scripts": {
        "install": "node ./scripts/composer.js",
        "prepare": "husky",
        "build": "node ./scripts/webpack-wrapper.js --mode production --progress",
        "dbuild": "node ./scripts/webpack-wrapper.js --mode development --progress",
        "watch": "cross-env TAILWIND_MODE=watch node ./scripts/webpack-wrapper.js --watch --mode production --progress",
        "dwatch": "cross-env TAILWIND_MODE=watch node ./scripts/webpack-wrapper.js --watch --mode development --progress",
        "build-all": "node ./scripts/build-all.js",
        "icon-list": "node ./scripts/webpack-wrapper.js --mode development --progress --dev-only && node ./scripts/icon-list.js",
        "docs": "node ./scripts/phpdoc.js && node ./scripts/start-browser.js ./.docs/api/index.html",
        "analyze": "webpack-bundle-analyzer ./stats.json",
        "lint-js": "eslint 'src/js/**/*.js' --fix",
        "lint-ts": "eslint 'src/ts/**/*.ts' --fix",
        "lint-style": "stylelint 'src/scss/**/*.{css,scss}' --fix",
        "check-eslint-config": "eslint-config-prettier .eslint",
        "check-stylelint-config": "stylelint-config-prettier-check",
        "cleanup": "node ./scripts/cleanup.js",
        "ncu": "ncu -u",
        "start": "webpack-dev-server --open --mode development --progress"
    },
    "devDependencies": {
        "@babel/core": "^7.28.5",
        "@babel/plugin-proposal-class-properties": "^7.18.6",
        "@babel/plugin-proposal-object-rest-spread": "^7.20.7",
        "@babel/plugin-transform-async-to-generator": "^7.27.1",
        "@babel/plugin-transform-runtime": "^7.28.5",
        "@babel/preset-env": "^7.28.5",
        "@babel/runtime": "^7.28.4",
        "@tailwindcss/postcss7-compat": "^2.2.17",
        "autoprefixer": "^10.4.23",
        "babel-loader": "^10.0.0",
        "brotli-webpack-plugin": "^1.1.0",
        "compression-webpack-plugin": "^11.1.0",
        "copy-webpack-plugin": "^13.0.1",
        "cross-env": "^10.1.0",
        "css-loader": "^7.1.2",
        "cssnano-webpack-plugin": "^1.0.3",
        "csso-webpack-plugin": "^3.0.0",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-prettier": "^5.5.4",
        "extract-css-chunks-webpack-plugin": "^4.10.0",
        "file-loader": "^6.2.0",
        "glob": "^13.0.0",
        "html-loader": "^5.1.0",
        "html-webpack-plugin": "^5.6.5",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.7",
        "mini-css-extract-plugin": "^2.9.4",
        "normalize.css": "^8.0.1",
        "postcss": "^8.5.6",
        "postcss-flexbugs-fixes": "^5.0.2",
        "postcss-loader": "^8.2.0",
        "prettier": "^3.7.4",
        "purgecss-webpack-plugin": "^7.0.2",
        "rimraf": "^6.1.2",
        "sass": "^1.96.0",
        "sass-loader": "^16.0.6",
        "style-loader": "^4.0.0",
        "stylelint": "^16.26.1",
        "stylelint-cli": "^1.3.0",
        "stylelint-config-prettier": "^9.0.5",
        "stylelint-config-recommended": "^17.0.0",
        "stylelint-config-sass-guidelines": "^12.1.0",
        "stylelint-config-standard-scss": "^16.0.0",
        "stylelint-prettier": "^5.0.3",
        "stylelint-scss": "^6.13.0",
        "terser-webpack-plugin": "^5.3.16",
        "ts-loader": "^9.5.4",
        "ts-node": "^10.9.2",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3",
        "webpack": "^5.103.0",
        "webpack-assets-manifest": "^6.5.0",
        "webpack-bundle-analyzer": "^5.1.0",
        "webpack-cli": "^6.0.1",
        "webpack-dev-server": "^5.2.2",
        "webpack-merge": "^6.0.1",
        "webpack-stats-plugin": "1.1.3"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "pre-push": "yarn check-eslint-config && yarn lint-code && yarn check-stylelint-config && yarn lint-style"
        }
    },
    "lint-staged": {
        "*.js": [
            "eslint --fix"
        ],
        "*.ts": [
            "eslint --fix"
        ],
        "*.{css,scss}": [
            "stylelint --fix"
        ]
    },
    "dependencies": {
        "@popperjs/core": "^2.11.8",
        "bootstrap": "^5.3.8",
        "glightbox": "^3.3.1",
        "global": "^4.4.0",
        "mark.js": "^8.11.1",
        "micromodal": "^0.6.1",
        "npm-check-updates": "^19.2.0",
        "simplebar": "^6.3.3",
        "tailwindcss": "^4.1.18",
        "tiny-slider": "^2.9.4",
        "vanilla-lazyload": "^19.1.3"
    }
}